<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="unsafe_inline" type="host">unsafe-inline</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
                <value id="data_image" type="host">data:</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
            </values>
        </policy>
        <policy id="child-src">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="cm-docdatapayments" type="host">*.docdatapayments.com</value>
                <value id="cm-payments" type="host">*.payments.cm.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
